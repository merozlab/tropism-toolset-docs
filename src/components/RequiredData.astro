---
/**
 * RequiredData Component
 *
 * Displays a formatted list of required experimental measurements and data
 * for a specific type of analysis.
 *
 * Usage:
 * <RequiredData>
 *   <DataItem name="Centerline coordinates" value="x, y positions in pixels" required />
 *   <DataItem name="Frame numbers" value="Temporal sequence identifier" required />
 *   <DataItem name="Pixel-to-meter conversion" value="e.g., 35 pixels = 1 mm" />
 * </RequiredData>
 */

interface Props {
  title?: string;
}

const { title = "Required Experimental Data" } = Astro.props;
---

<div class="required-data-container">
  <div class="required-data-header">
    <h3>{title}</h3>
    {(<p class="description">{<slot />}</p>)}
  </div>
  <!-- <div class="required-data-list">
    <slot />
  </div> -->
</div>

<style>
  .required-data-container {
    background: var(--sl-color-bg-sidebar);
    border: 2px solid var(--sl-color-hairline);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin: 1.5rem 0;
  }

  .required-data-header h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.25rem;
    color: var(--sl-color-white);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .description {
    margin: 0.5rem 0 1rem 0;
    color: var(--sl-color-gray-2);
    font-size: 0.95rem;
    line-height: 1.5;
  }

  .required-data-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .required-data-container {
      padding: 1rem;
    }
  }
</style>
